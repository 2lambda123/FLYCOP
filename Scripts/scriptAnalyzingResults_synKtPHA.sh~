#!/bin/bash

# call: scriptAnalyzingResults_synKtPHA.sh 1 V2 'MaxPHA'

domainName='synKtPHA'

id=$1 # '20', '21', ...
templateID=$2 # 'V1' 'V2' 'V5' ...
fitness=$3

nRuns=500

echo "Fitness: " $fitness

seed=123
cd smac-output/${domainName}_wrapper_scenario_v${id}/state-run${seed}

# 1.- Get summary statistics file $nRuns SMAC configurations 
tail -n${nRuns} runs_and_results-it*.csv | awk -F, '{print NR","1-$4}' > fitness.csv
paste -d, paramstrings-it*.txt fitness.csv > paramstrings_withFitness.csv
echo "sucrPer\tSynecho\tKT\tNH4\tfitness" > tableParamWithFitness.csv
cut -d, -f1-4,6 paramstrings_withFitness.csv | awk 'BEGIN{FS="[=,]"} {print $2"\t"$4"\t"$6"\t"$8"\t"$9}' | sed "s/'//g" | sed "s/-999999999/0/">> tableParamWithFitness.csv
egrep "WARN.*Result of algorithm run|ERROR.*The following algorithm call failed" ../log-warn${seed}.txt | awk -F'Result of algorithm run: ' '{if($2==""){print "X,X,X,1,X,X,1"}else{print $2}}' | cut -d, -f4,7 | awk -F, '{print 1-$1","$2}' > avgfitnessAndStdev.txt
# Retrieve configuration
cd ..
param1=`tail log-run${seed}.txt | egrep "p1_" | awk -F'p1_' '{print $2}' | cut -d' ' -f2 | sed "s/'//g"`
param2=`tail log-run${seed}.txt | egrep "p1_" | awk -F'p1_' '{print $2}' | cut -d' ' -f4 | sed "s/'//g"`
param3=`tail log-run${seed}.txt | egrep "p1_" | awk -F'p1_' '{print $2}' | cut -d' ' -f6 | sed "s/'//g"`
param4=`tail log-run${seed}.txt | egrep "p1_" | awk -F'p1_' '{print $2}' | cut -d' ' -f8 | sed "s/'//g"`
echo "Optimal consortium configuration found: " $param1 $param2 $param3 $param4
cd ../..

# 2.- R script to build scatterplot and correlations files
Rscript --vanilla ../Scripts/printScatterPlotSMACvariablesAndFitness_generic_single.r $domainName $id $fitness

# 3.- Move configurations collection file to data analysis folder
mv smac-output/${domainName}_PlotsScenario${id}/configurationsResults* ${domainName}_wrapper_scenario_v${id}/state-run${seed}/

# 4.- Generar un test individual, con el mismo nยบ de scenario (tengo que hacer trozo script python)
cp -p -R SynKtPHA_TemplateOptimizeConsortium${templateID} SynKtPHA_Test${id}
cd SynKtPHA_Test${id}
python3 ../../Scripts/script_synKtPHA_individualTest.py $param1 $param2 $param3 $param4 $fitness

